#!/bin/sh -e

main () {
	DB='/var/www/db/www'
	test -d "$DB" || fail "$DB: not found"
	EXP_TIME='3600'
	FROM='hi@romanzolotarev.com'
	NAME='Roman Zolotarev'

	dispatch_mail
	remove_expired_tokens
	remove_expired_memberships
	list_newsletter_subscribers
}

##########################################################################


dispatch_mail() {
	dir="$DB/mail"
	test -d "$dir" || return

	>&2 echo "[dispatch] $(date '+%Y-%m%-%d %H:%M:%S') mail/*"
	find "$dir" -type f | head -n 10 |
	while read -r m
	do
		test -f "$m" || break
		sendmail -t -F "$NAME" -f "$FROM" < "$m"
		to=$(head -n 1 "$m" | cut -d' ' -f2-)
		echo "$m: $to"
		rm "$m"
	done
}


remove_expired_tokens() {
	dir="$DB/tokens"
	test -d "$dir" || return

	>&2 echo "[dispatch] $(date '+%Y-%m%-%d %H:%M:%S') tokens/*"
	find "$dir" -type f -cmin "+$(( EXP_TIME / 60 ))" -delete
}


remove_expired_memberships() {
	dir="$DB/members"
	test -d "$dir" || return

	>&2 echo "[dispatch] $(date '+%Y-%m%-%d %H:%M:%S') members/*/expires_at"
	now=$(date +%s)
	find "$dir" -type f -name 'expires_at' |
	while read -r f
	do
		m=${f%%/expires_at}
		f_email="$m/email"
		test -f "$f_email" && email=$(cat "$f_email")
		e_at=$(cat "$f")
		e_in=$(( (e_at - now)  ))
		e_in_days=$(( (e_in) / 86400 ))
		printf '%s: %6.d %s' "$m" "$e_in_days" "$email"
		if test "$e_in" -lt 0
		then
			printf ' - expired\n'
			rm "${f:?}"
		else echo
		fi
	done
}

list_newsletter_subscribers() {
	dir="$DB/members"
	test -d "$dir" || return

	>&2 echo "[dispatch] $(date '+%Y-%m%-%d %H:%M:%S') members/*/newsletter"
	find "$dir" -type f -name 'newsletter' |
	while read -r f
	do
		m=${f%%/newsletter}
		f_email="$m/email"
		test -f "$f_email" && email=$(cat "$f_email")
		echo "$m: $email"
	done
}

##########################################################################

fail() {
	>&2 echo "$1"
	exit 1
}

main
